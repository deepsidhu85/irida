<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="analysis-submission-cloud-temp-files" author="deep">
        <createTable tableName="analysis_submission_temp_files">
            <column name="id" autoIncrement="true" type="bigint(20)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="analysis_submission_id" type="bigint(20)">
                <constraints referencedTableName="analysis_submission"
                             referencedColumnNames="id" foreignKeyName="FK_ANALYSIS_SUBMISSION_TEMPFILE"
                             nullable="false" />
            </column>

            <column name="temp_file_path" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="temp_file_directory_path" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="created_date" type="datetime">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
